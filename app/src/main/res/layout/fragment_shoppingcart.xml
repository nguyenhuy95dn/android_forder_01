<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.cart.ShoppingCartViewModel"
            />
        <import type="com.framgia.forder.utils.binding.LayoutManagers"/>

    </data>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ExpandableListView
            android:id="@+id/expand_list_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:dividerHeight="@dimen/dp_2"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            app:adapter="@{viewModel.shoppingCartAdapter}"
            />
        <RelativeLayout
            android:id="@+id/layout_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:background="@color/color_yellow_white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_total"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.totalPrice}"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/color_yellow_white"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/button_order"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    app:srcCompat="@drawable/ic_order_all"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_order_all"
                    android:textColor="@color/color_orange"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
