<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.createProduct.CreateProductViewModel"
            />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_270"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_270"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title="@string/create_new_product"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/cover_image"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.image}"
                        />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:layout_scrollFlags="scroll|enterAlways"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:onClick="@{()-> viewModel.onClickBack()}"
                            android:src="@drawable/nav_back"
                            tools:ignore="ContentDescription,VectorDrawableCompat"
                            />
                    </android.support.v7.widget.Toolbar>
                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorPrimary"
                            app:errorTextInputLayout="@{viewModel.nameError}"
                            app:hintTextAppearance="@style/TextLabelInputLayout"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/product_name"
                                android:text="@={viewModel.name}"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorPrimary"
                            app:errorTextInputLayout="@{viewModel.descriptionError}"
                            app:hintTextAppearance="@style/TextLabelInputLayout"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/product_description"
                                android:text="@={viewModel.description}"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorPrimary"
                            app:hintTextAppearance="@style/TextLabelInputLayout"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/price"
                                android:inputType="numberDecimal"
                                android:text="@={viewModel.price}"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/category"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp_18"
                                />
                            <android.support.v7.widget.AppCompatSpinner
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_11"
                                android:selectedItemPosition="@={viewModel.selectedTypePosition}"
                                android:spinnerMode="dropdown"
                                app:spinnerAdapter="@{viewModel.adapterCategory}"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/product_status"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp_18"
                                />
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_60"
                                android:layout_marginStart="@dimen/dp_60"
                                android:layout_marginTop="@dimen/dp_9"
                                android:orientation="horizontal"
                                >
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{viewModel.checkActive}"
                                    android:onCheckedChanged="@{() -> viewModel.onSwitchChange()}"
                                    android:text="@string/active"
                                    style="@style/Base.Widget.AppCompat.CompoundButton.RadioButton"
                                    />
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:checked="@{viewModel.checkInActive}"
                                    android:text="@string/inactive"
                                    style="@style/Base.Widget.AppCompat.CompoundButton.RadioButton"
                                    />
                            </RadioGroup>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/colorPrimary"
                                app:hintTextAppearance="@style/TextLabelInputLayout"
                                >
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/textInputEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/start_hour"
                                    android:inputType="numberDecimal"
                                    android:text="@{viewModel.startHour}"
                                    android:textColor="@color/black"
                                    />
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:onClick="@{()-> viewModel.onClickChooseStartHour()}"
                                app:srcCompat="@drawable/ic_timer_gray"
                                tools:ignore="ContentDescription,UnusedAttribute"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/colorPrimary"
                                app:hintTextAppearance="@style/TextLabelInputLayout"
                                >
                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:hint="@string/end_hour"
                                    android:inputType="numberDecimal"
                                    android:text="@{viewModel.endHour}"
                                    android:textColor="@color/black"
                                    />
                            </android.support.design.widget.TextInputLayout>
                            <ImageButton
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:onClick="@{()-> viewModel.onClickChooseEndHour()}"
                                app:srcCompat="@drawable/ic_timer_gray"
                                tools:ignore="ContentDescription,UnusedAttribute"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <Button
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/border_button_next"
                        android:onClick="@{()-> viewModel.onClickCreateProduct()}"
                        android:text="@string/create"
                        android:textColor="@color/color_orange_mos"
                        tools:ignore="ObsoleteLayoutParam"
                        />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/dp_15"
                android:background="@color/colorPrimary"
                android:onClick="@{()-> viewModel.onClickChooseImage()}"
                android:tint="@color/color_white"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:srcCompat="@drawable/ic_camera_black"
                tools:ignore="UnusedAttribute"
                />
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>
