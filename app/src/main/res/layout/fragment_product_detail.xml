<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.productdetail.ProductDetailViewModel"
            />
        <import type="android.view.View"/>

    </data>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/color_gray_white"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_15"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                tools:ignore="UnusedAttribute"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp_20"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_300"
                        android:layout_margin="@dimen/dp_7"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:imageUrl="@{viewModel.productImage}"
                        app:layout_collapseMode="parallax"
                        tools:ignore="ContentDescription"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/border_layout"
                        android:backgroundTint="@color/color_white_transparent"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_toLeftOf="@+id/image_button"
                            android:layout_toStartOf="@+id/image_button"
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_10"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@color/transparent"
                                android:ellipsize="marquee"
                                android:maxLines="1"
                                android:text="@{viewModel.nameProduct}"
                                android:textColor="@color/color_dark_slate_gray"
                                android:textSize="@dimen/sp_24"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/transparent"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:drawablePadding="@dimen/dp_5"
                                android:ellipsize="marquee"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:padding="@dimen/dp_2"
                                android:text="@{viewModel.description}"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/sp_18"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/boder_title"
                            android:backgroundTint="@color/color_white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_34"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_white"
                            android:drawableLeft="@drawable/ic_time"
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_time"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_10"
                            android:text="@{viewModel.orderTime}"
                            android:textColor="@color/dark_gray"
                            android:textStyle="bold"
                            />

                        <ImageButton
                            android:id="@+id/image_button"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/dp_10"
                            android:background="@drawable/border_button_next"
                            android:backgroundTint="@color/color_orange_mos"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add_product_cart"
                            android:visibility="@{viewModel.productTimeOut ? View.GONE : View.VISIBLE}"
                            app:onClickShowPopupMenuOrder="@{viewModel::onMenuItemClick}"
                            tools:ignore="ContentDescription,UnusedAttribute,VectorDrawableCompat"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray_white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="@{viewModel.productPrice}"
                    android:textColor="@color/color_red_mos"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_red_mos"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:adjustViewBounds="true"
                        android:background="@drawable/button_red"
                        android:backgroundTint="@color/color_gray_white"
                        android:padding="@dimen/dp_3"
                        android:scaleType="fitXY"
                        app:imageUrl="@{viewModel.shopImage}"
                        tools:ignore="ContentDescription,UnusedAttribute"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_10"
                        android:orientation="vertical"
                        tools:ignore="RtlHardcoded,RtlSymmetry"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/ic_store_24dp"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableStart="@drawable/ic_store_24dp"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="@{viewModel.shopName}"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_3"
                            android:background="@color/color_gray_white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:drawableLeft="@drawable/ic_descriptions"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableStart="@drawable/ic_descriptions"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.descriptionShop}"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/sp_15"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/color_gray_white"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_label"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_label"
                        android:gravity="center_vertical"
                        android:text="@string/products_shop"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.onClickSeeAllProduct()}"
                        android:text="@string/see_all"
                        android:textColor="@color/color_orange_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_view_productInShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal"
                        app:layoutManager="LinearLayoutManager"
                        app:recyclerAdapter="@{viewModel.productShopAdapter}"
                        tools:ignore="UnusedAttribute"
                        />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.progressBarListProductVisible? View.VISIBLE : View.GONE}"
                        style="?android:attr/progressBarStyleSmall"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_comment"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_comment"
                        android:gravity="center_vertical"
                        android:text="@string/comments"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:contentDescription="@string/comments"
                            app:layoutManager="LinearLayoutManager"
                            app:recyclerAdapter="@{viewModel.commentAdapter}"
                            />
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="@{viewModel.progressBarListCommentVisible ? View.VISIBLE : View.GONE}"
                            style="@style/Base.Widget.AppCompat.ProgressBar"
                            />
                    </FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:contentDescription="@string/see_more"
                        android:gravity="center"
                        android:text="@string/see_more"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@color/color_white"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:background="@drawable/border_button"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toLeftOf="@+id/button_send_comment"
                android:layout_toStartOf="@+id/button_send_comment"
                android:hint="@string/add_a_comment"
                android:maxLength="300"
                android:text="@={viewModel.comment}"
                />
            <ImageButton
                android:id="@+id/button_send_comment"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_4"
                android:background="@drawable/ic_send"
                android:onClick="@{() -> viewModel.onClickSendComment()}"
                tools:ignore="ContentDescription,RtlHardcoded"
                />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
