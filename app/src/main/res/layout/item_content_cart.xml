<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.cart.ItemShoppingCartViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.productImage}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5"
                    >
                    <TextView
                        android:id="@+id/text_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="@{viewModel.productName}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_15"
                        />
                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.price}"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageButton
                            android:id="@+id/button_down_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:onClick="@{()-> viewModel.downQuantity()}"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_remove_black"
                            />
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@color/cardview_dark_background"
                            />
                        <TextView
                            android:id="@+id/text_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:text="@{viewModel.quantity}"
                            android:textSize="@dimen/sp_18"
                            />
                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@color/cardview_dark_background"
                            />
                        <ImageButton
                            android:id="@+id/button_up_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:onClick="@{()-> viewModel.upQuantity()}"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_add_black"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/button_delete_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@android:color/transparent"
                    android:onClick="@{()-> viewModel.deleteProduct()}"
                    app:srcCompat="@drawable/ic_delete"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
