<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.updateProduct.UpdateProductViewModel"
            />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/edit_product"
                android:textColor="@color/color_orange_mos"
                android:textSize="@dimen/sp_30"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/boder_title"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_name"
                    android:text="@={viewModel.name}"
                    android:textSize="@dimen/sp_14"
                    app:errorText="@{viewModel.nameError}"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:text="@={viewModel.description}"
                    android:textSize="@dimen/sp_14"
                    app:errorText="@{viewModel.descriptionError}"
                    />
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/price"
                    android:inputType="numberDecimal"
                    android:text="@={viewModel.price}"
                    android:textSize="@dimen/sp_14"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/category"
                        android:textColor="@color/color_black"
                        />
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_11"
                        android:selectedItemPosition="@={viewModel.selectedTypePosition}"
                        android:spinnerMode="dropdown"
                        app:spinnerAdapter="@{viewModel.adapterCategory}"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@={viewModel.startHour}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/start_hour"
                        android:textColor="@color/color_black"
                        />
                    <ImageButton
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:contentDescription="@string/start_hour"
                        android:onClick="@{()-> viewModel.onClickChooseStartHour()}"
                        app:srcCompat="@drawable/ic_time"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/end_hour"
                        android:textColor="@color/color_black"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@={viewModel.endHour}"
                        />
                    <ImageButton
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:contentDescription="@string/end_hour"
                        android:onClick="@{()-> viewModel.onClickChooseEndHour()}"
                        app:srcCompat="@drawable/ic_time"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/status"
                        android:textColor="@color/color_black"
                        />
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_10"
                        android:onCheckedChanged="@{() -> viewModel.onSwitchChange()}"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/avatar"
                        android:textColor="@color/color_black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginLeft="@dimen/dp_100"
                            android:layout_marginStart="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/border_comment"
                            android:scaleType="centerCrop"
                            app:imageUrl="@{viewModel.image}"
                            tools:ignore="ContentDescription"
                            />
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/border_layout"
                            android:contentDescription="@string/choose_file"
                            android:onClick="@{()-> viewModel.onClickChooseImage()}"
                            android:padding="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_20"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20"
                            android:paddingStart="@dimen/dp_20"
                            app:srcCompat="@drawable/ic_add_image"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_button_next"
                android:onClick="@{()-> viewModel.onClickUpdateProduct()}"
                android:text="@string/save"
                android:textColor="@color/color_orange_mos"
                />
        </LinearLayout>
    </ScrollView>
</layout>
