<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.main.MainViewModel"
            />
    </data>

    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:background="@color/color_gray_white"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/layout_home"
                android:onClick="@{viewModel::onFooterClicked}"
                app:selected="@{true}"
                style="@style/StyleTabFooter"
                >
                <ImageView
                    android:src="@drawable/selected_ic_home"
                    app:srcCompat="@drawable/ic_home"
                    style="@style/StyleImageViewTabFooter"
                    />
                <TextView
                    android:text="@string/title_tab_home"
                    style="@style/StyleTitleTabFooter"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_seach"
                android:onClick="@{viewModel::onFooterClicked}"
                style="@style/StyleTabFooter"
                >
                <ImageView
                    android:src="@drawable/selected_ic_search"
                    app:srcCompat="@drawable/ic_search"
                    style="@style/StyleImageViewTabFooter"
                    />
                <TextView
                    android:text="@string/title_tab_search"
                    style="@style/StyleTitleTabFooter"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/StyleTabFooter"
                />
            <LinearLayout
                android:id="@+id/layout_notify"
                android:onClick="@{viewModel::onFooterClicked}"
                style="@style/StyleTabFooter"
                >
                <ImageView
                    android:src="@drawable/selected_ic_notifications"
                    app:srcCompat="@drawable/ic_notifications"
                    style="@style/StyleImageViewTabFooter"
                    />
                <TextView
                    android:text="@string/title_tab_nitofy"
                    style="@style/StyleTitleTabFooter"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_profile"
                android:onClick="@{viewModel::onFooterClicked}"
                style="@style/StyleTabFooter"
                >
                <ImageView
                    android:src="@drawable/selected_ic_profile"
                    app:srcCompat="@drawable/ic_person"
                    style="@style/StyleImageViewTabFooter"
                    />
                <TextView
                    android:text="@string/title_tab_profile"
                    style="@style/StyleTitleTabFooter"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerInParent="true"
            android:background="@drawable/center_tab_footer"
            android:onClick="@{viewModel::onFooterClicked}"
            android:scaleType="center"
            android:src="@drawable/selected_ic_cart"
            app:srcCompat="@drawable/ic_cart"
            />

    </RelativeLayout>

</layout>
