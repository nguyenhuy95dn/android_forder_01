<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.shopDetail.ShopDetailViewModel"
            />
        <import type="android.view.View"/>

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_250"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/cover_image"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.shopImage}"
                        app:layout_collapseMode="parallax"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_white_transparent"
                        android:contentDescription="@string/avatar_shop"
                        tools:ignore="ContentDescription,UselessParent"
                        />
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <View
                        android:id="@+id/view_white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_above="@+id/view_white"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/image_shop"
                        android:layout_toRightOf="@+id/image_shop"
                        android:fontFamily="@string/font_serif"
                        android:paddingEnd="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_2"
                        android:paddingStart="@dimen/dp_5"
                        android:text="@{viewModel.name}"
                        android:textColor="@color/color_orange_mos"
                        android:textSize="@dimen/sp_30"
                        android:textStyle="bold"
                        app:paddingStart="@dimen/dp_5"
                        tools:ignore="UnusedAttribute"
                        />

                    <ImageView
                        android:id="@+id/image_shop"
                        android:layout_width="@dimen/dp_170"
                        android:layout_height="@dimen/dp_150"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border_layout"
                        android:contentDescription="@string/avatar_shop"
                        android:scaleType="fitXY"
                        app:imageUrl="@{viewModel.shopAvatar}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/image_shop"
                        android:layout_toRightOf="@+id/image_shop"
                        android:drawableEnd="@drawable/ic_stars"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_stars"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@{viewModel.averageRating}"
                        android:textColor="@color/color_red_mos"
                        android:textSize="@dimen/sp_20"
                        tools:ignore="RelativeOverlap"
                        />
                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="@string/description"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/text_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="@{viewModel.name}"
                        android:textSize="@dimen/sp_16"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@color/color_gray_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/shop_owner_information"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    >
                    <com.framgia.forder.widgets.CircleImageView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="@dimen/dp_85"
                        android:layout_gravity="center"
                        android:contentDescription="@string/owner"
                        android:padding="@dimen/dp_5"
                        app:imageUrl="@{viewModel.ownerAvatar}"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_15"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:adjustViewBounds="true"
                                android:background="@drawable/ic_person_red_500"
                                android:backgroundTint="@color/color_orange_mos"
                                android:contentDescription="@string/owner"
                                android:scaleType="centerCrop"
                                tools:ignore="UnusedAttribute"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="@{viewModel.shopOwnerName}"
                                android:textColor="@color/color_black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:adjustViewBounds="true"
                                android:background="@drawable/ic_email_red"
                                android:backgroundTint="@color/color_orange_mos"
                                android:contentDescription="@string/email"
                                android:scaleType="centerCrop"
                                tools:ignore="UnusedAttribute"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="@{viewModel.shopOwnerEmail}"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_label"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_label"
                        android:gravity="center_vertical"
                        android:text="@string/products_shop"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.onClickSeeAllProduct()}"
                        android:text="@string/see_all"
                        android:textColor="@color/color_orange_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_view_productInShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal"
                        app:layoutManager="LinearLayoutManager"
                        app:recyclerAdapter="@{viewModel.productShopAdapter}"
                        tools:ignore="UnusedAttribute"
                        />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.progressBarListProductVisible? View.VISIBLE : View.GONE}"
                        style="?android:attr/progressBarStyleSmall"
                        />
                </FrameLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
