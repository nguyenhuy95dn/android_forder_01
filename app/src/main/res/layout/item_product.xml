<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.mainpage.product.ItemProductViewModel"
            />
        <import type="android.view.View"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()-> viewModel.onItemClicked()}"
        android:padding="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:imageUrl="@{viewModel.productImage}"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/border_price"
                    android:padding="@dimen/dp_10"
                    android:text="@{viewModel.productPrice}"
                    android:textColor="@color/color_red_mos"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
                <ImageButton
                    android:id="@+id/button"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/border_button_next"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_cart_shop"
                    android:visibility="@{viewModel.productTimeOut ? View.GONE : View.VISIBLE}"
                    bind:onClickShowPopupMenuOrder="@{viewModel::onMenuItemClick}"
                    tools:ignore="ContentDescription,UnusedAttribute,VectorDrawableCompat"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_5"
                tools:ignore="UselessLeaf"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_black_transparent_mos"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:text="@{viewModel.orderTime}"
                    android:textColor="@color/color_white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:text="@{viewModel.productName}"
                    android:textColor="@color/color_orange_mos"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    android:background="@color/color_gray"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginRight="@dimen/dp_7"
                    android:layout_marginStart="@dimen/dp_7"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@{viewModel.description}"
                    android:textColor="@color/color_dark_slate_gray"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
